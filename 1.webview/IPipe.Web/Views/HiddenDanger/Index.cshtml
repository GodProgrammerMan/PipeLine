@{
    ViewData["Title"] = "上报隐患";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link rel="stylesheet" href="~/js/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="~/css/site.min.css" media="all">
}
<form action="" class="layui-form form-cus">
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">隐患名称</label> <div class="layui-input-inline"><input type="text" id="departmentName" value="" name="departmentName" maxlength="50" lay-verify="required" lay-vertype="tips" autocomplete="off" class="layui-input"></div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">处理单位</label> <div class="layui-input-inline"><input type="text" id="aliasName" name="aliasName" maxlength="50" lay-verify="required" lay-vertype="tips" autocomplete="off" class="layui-input"></div>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">发现隐患时间</label> <div class="layui-input-inline"><input type="text" id="faxTime" name="departmentName" maxlength="50" lay-verify="required" lay-vertype="tips" autocomplete="off" class="layui-input"></div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">处理时间</label> <div class="layui-input-inline"><input type="text" id="chuliTime" name="aliasName" maxlength="50" lay-verify="required" lay-vertype="tips" autocomplete="off" class="layui-input"></div>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">处理状态</label>
        <select name="city" lay-verify="">
            <!option value="0">待处理</!option>
            <!option value="1">进行中</!option>
            <!option value="2">已处理</!option>
        </select>
        <div class="layui-form-mid layui-word-aux"></div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">隐患内容</label>
        <div class="layui-input-block">
            <textarea name="remarks" id="remarks" placeholder="请输入隐患内容" class="layui-textarea" autocomplete="off" lay-verify="required" lay-vertype="tips"></textarea>
        </div>
    </div>
    <ul class="addpic-list cur-image clearfix">
        <li>
            <div class="add-photo default" style="height:200px;">
                <input name="images" id="logo" type="hidden" class="imgv" value="">
                <div class="select-newimg fyt-cloud @( string.IsNullOrWhiteSpace(Model?.logo)?"":"layui-hide")" style="padding-top: 60px;" id="imgCutBox">
                    <i class="layui-icon layui-icon-add-circle sizeioc"></i> <span>地质雷达图</span>
                </div>
                <div class="add-photo-wall @(string.IsNullOrWhiteSpace(Model?.logo)?"layui-hide":"")">
                    <img id="imgShow" src="@(Model?.logo)" style="height:200px;">
                    <div class="phote-edit">
                        <a href="javascript:$('#imgCutBox').click();" class="photo-tool fyt-cloud"><i class="layui-icon layui-icon-edit"></i>更换</a>
                        <a href="javascript:void(0)" onclick="deleteFile()" class="photo-tool last"><i class="layui-icon layui-icon-delete"></i>删除</a>
                    </div>
                    <div class="cover">地质雷达图</div>
                </div>
            </div>
        </li>
    </ul>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button lay-submit="" lay-filter="submit" id="submit" class="layui-btn"><i class="layui-icon layui-icon-loading layui-icon layui-anim layui-anim-rotate layui-anim-loop layui-hide"></i>立即提交</button> <button type="button" class="layui-btn layui-btn-primary btn-open-close" id="bnt_close">取消</button>
        </div>
    </div>
    <input type="hidden" name="id" id="id" value="@Model?.id" />
</form>
@section Scripts{
    <!-- 全局js -->
    <script src="~/js/jquery.min.js"></script>
    <!-- layer -->
    <script src="~/js/layui/layui.all.js"></script>
    <script>
        layui.use(['element', 'form', 'laydate'], function () {
            var form = layui.form;
            var element = layui.element;
            var laydate = layui.laydate;
            laydate.render({
                elem: '#faxTime' //指定元素
            });
            laydate.render({
                elem: '#chuliTime' //指定元素
            });
            //监听提交
            //监听提交

        });
    </script>
}

